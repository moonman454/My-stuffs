Card Status SVG = 

VAR Total = 40
VAR Cancelado = 0
VAR NaoIniciado = 20
VAR Parado = 1
VAR Atrasado = 1
VAR EmAndamento = 10
VAR Concluido = 10

VAR PercNaoIniciado = DIVIDE(NaoIniciado, Total)
VAR PercEmAndamento = DIVIDE(EmAndamento, Total)

-- largura total da barra
VAR BarraTotal = 840
VAR BarraEmAndamento = BarraTotal * PercEmAndamento

VAR SVG =
"<svg width='900' height='170' viewBox='0 0 900 170' xmlns='http://www.w3.org/2000/svg'>" &

"<rect x='0' y='0' width='900' height='170' rx='18' fill='#111827'/>" &

"<text x='30' y='35' font-size='20' fill='white' font-family='Segoe UI' font-weight='600'>
Status Geral das Ordens</text>" &

"<text x='870' y='35' text-anchor='end' font-size='18' fill='#9CA3AF' font-family='Segoe UI'>
Total: " & Total & "</text>" &

"<rect x='30' y='55' width='840' height='14' rx='7' fill='#1F2937'/>" &

"<rect x='30' y='55' width='" & BarraEmAndamento & "' height='14' rx='7' fill='url(#grad1)'/>" &

"<defs>
<linearGradient id='grad1' x1='0%' y1='0%' x2='100%' y2='0%'>
<stop offset='0%' stop-color='#3B82F6'/>
<stop offset='100%' stop-color='#06B6D4'/>
</linearGradient>
</defs>" &

"<g font-family='Segoe UI' font-size='15'>" &

"<text x='30' y='105' fill='#F87171'>Cancelado</text>" &
"<text x='30' y='125' fill='white' font-weight='600'>" & Cancelado & "</text>" &
"<text x='30' y='145' fill='#9CA3AF'>" & FORMAT(DIVIDE(Cancelado,Total),"0%\") & "</text>" &

"<text x='180' y='105' fill='#A78BFA'>Não iniciado</text>" &
"<text x='180' y='125' fill='white' font-weight='600'>" & NaoIniciado & "</text>" &
"<text x='180' y='145' fill='#9CA3AF'>" & FORMAT(PercNaoIniciado,"0%\") & "</text>" &

"<text x='350' y='105' fill='#9CA3AF'>Parado</text>" &
"<text x='350' y='125' fill='white' font-weight='600'>" & Parado & "</text>" &
"<text x='350' y='145' fill='#9CA3AF'>" & FORMAT(DIVIDE(Parado,Total),"0%\") & "</text>" &

"<text x='460' y='105' fill='#FB7185'>Atrasado</text>" &
"<text x='460' y='125' fill='white' font-weight='600'>" & Atrasado & "</text>" &
"<text x='460' y='145' fill='#9CA3AF'>" & FORMAT(DIVIDE(Atrasado,Total),"0%\") & "</text>" &

"<text x='580' y='105' fill='#3B82F6'>Em andamento</text>" &
"<text x='580' y='125' fill='white' font-weight='600'>" & EmAndamento & "</text>" &
"<text x='580' y='145' fill='#9CA3AF'>" & FORMAT(PercEmAndamento,"0%\") & "</text>" &

"<text x='730' y='105' fill='#34D399'>Concluído</text>" &
"<text x='730' y='125' fill='white' font-weight='600'>" & Concluido & "</text>" &
"<text x='730' y='145' fill='#9CA3AF'>" & FORMAT(DIVIDE(Concluido,Total),"0%\") & "</text>" &

"</g></svg>"

RETURN
"data:image/svg+xml;utf8," & SVG
